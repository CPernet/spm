function a = spm_file_array(fname,dim,dtype)
% Function for creating spm_file_array objects.
% FORMAT a = spm_file_array(fname,dim,dtype)
% a      - spm_file_array object
% fname  - filename
% dim    - dimensions
% dtype  - datatype (see spm_type)
% _______________________________________________________________________
% %W% John Ashburner %E%

if nargin<3,
	error('Incorrect usage');
end;

dim = dim(:)';
dtype = dtype(1);

a = struct('fname',fname,'dim',dim,'dtype',dtype);
a = class(a,'spm_file_array');
